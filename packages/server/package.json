{
  "name": "@sidecar/server",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "sidecar": "./dist/cli.js",
    "sidecar-server": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:cli": "tsx src/cli.ts",
    "build": "tsc && cp -r src/hooks dist/",
    "start": "node dist/index.js",
    "start:cli": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "tsx src/test.ts",
    "test:phone": "tsx src/test-phone.ts",
    "server:watch": "bash scripts/watch-server.sh"
  },
  "dependencies": {
    "@sidecar/shared": "workspace:*",
    "node-pty": "^1.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
