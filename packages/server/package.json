{
  "name": "@sidecar/server",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "sidecar-server": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && cp -r src/hooks dist/",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "tsx src/test.ts",
    "test:auth": "node --import tsx --test src/auth/token.test.ts",
    "server:watch": "bash scripts/watch-server.sh"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@sidecar/shared": "workspace:*",
    "hono": "^4.11.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
