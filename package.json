{
  "name": "sidecar",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": ["node-pty"]
  },
  "scripts": {
    "postinstall": "chmod +x node_modules/.pnpm/node-pty@*/node_modules/node-pty/prebuilds/darwin-*/spawn-helper 2>/dev/null || true",
    "dev": "pnpm --filter @sidecar/server dev",
    "dev:web": "pnpm --filter @sidecar/web dev",
    "dev:all": "concurrently \"pnpm server\" \"pnpm web\" --kill-others-on-fail",
    "build": "pnpm -r build",
    "build:server": "pnpm --filter @sidecar/server build",
    "build:web": "pnpm --filter @sidecar/web build",
    "server": "pnpm --filter @sidecar/server start",
    "web": "pnpm --filter @sidecar/web dev",
    "start": "concurrently \"pnpm server\" \"pnpm web\" -n server,web -c blue,green",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "test": "pnpm --filter @sidecar/server test"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "typescript": "^5.0.0"
  }
}
