{
  "name": "sidecar",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @sidecar/server dev",
    "dev:web": "pnpm --filter @sidecar/web dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:web\" --kill-others-on-fail",
    "build": "pnpm -r build",
    "build:server": "pnpm --filter @sidecar/server build",
    "build:web": "pnpm --filter @sidecar/web build",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "test": "pnpm --filter @sidecar/server test"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "typescript": "^5.0.0"
  }
}
